{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "tags": {
                "source": "empty"
    },
    "parameters": {
        "Cognitive Services Name": { "type": "String" },
        "Storage Account Name": { "type": "String" },
        "Functions Name": { "type": "String" }
    },
    "variables": {},
    "resources": [
        {
            "comments": "Used for checking the faces in the images. Must be deployed in westus.",
            "type": "Microsoft.CognitiveServices/accounts",
            "sku": {
                "name": "F0"
            },
            "kind": "Face",
            "name": "[parameters('Cognitive Services Name')]",
            "apiVersion": "2016-02-01-preview",
            "location": "westus",
            "properties": {},
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Used for storing the Azure Functions Logs and Image files",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('Storage Account Name')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {},
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Hosts the function acting as the IoT gateway.",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('functions_name')]",
            "apiVersion": "2015-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('Functions Name')]",
                "hostNames": [
                    "[concat(parameters('Functions Name'), '.azurewebsites.net')]"
                ]
            },
            "resources": [],
            "dependsOn": []
        }
    ]
}